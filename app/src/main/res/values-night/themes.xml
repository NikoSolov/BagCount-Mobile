<resources>
    <!-- Base application theme. -->
    <style name="Theme.BagsCount" parent="Theme.Material3.DayNight">

        <!-- Цвет Фона -->
        <item name="background">@color/darkBackground</item>
        <!-- Цвет кнопки -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <!-- Цвет текста кнопки -->
        <item name="colorOnPrimary">@color/darkOnPrimary</item>

        <!-- ==================== Scan Fragment ====================== -->
        <!-- Цвет кнопок в фрагменте сканирования-->
        <item name="scanButtonColor">@color/white</item>
        <!-- Цвет текста кнопки-->
        <item name="scanButtonTextColor">@color/white</item>
        <!-- Явное указание для ActionBar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>

        <!-- ==================== Bottom Navigation ====================== -->
        <!-- Фон -->
        <item name="bottomNavBackground">@color/darkSurface</item>
        <!-- Активная иконка -->
        <item name="bottomNavActiveIcon">@color/white</item>
        <!-- Неактивная иконка -->
        <item name="bottomNavInactiveIcon">@color/colorDisabled</item>
        <!-- Текст иконки -->
        <item name="bottomNavText">@color/white</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.Material3.ActionBar.Solid">
        <item name="background">@color/darkPrimary</item> <!-- Цвет ActionBar -->
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    <style name="ActionBarTitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/white</item> <!-- Цвет заголовка -->
    </style>


</resources>